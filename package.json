{
  "name": "@andreasnicolaou/rtl-detect",
  "version": "1.0.0",
  "description": "Modern, standards-based RTL (Right-to-Left) language detection for JavaScript/TypeScript. Detects if a locale is RTL, gets text direction, and lists all Unicode/ISO RTL languages.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "browser": "dist/index.umd.min.js",
  "private": false,
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --fix",
    "test": "jest",
    "test:ci": "cross-env JEST_JUNIT_CLASSNAME=\"{filepath}\" jest --reporters=default --reporters=jest-junit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:bundle": "npx bundlewatch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andreasnicolaou/rtl-detect.git"
  },
  "bugs": {
    "url": "https://github.com/andreasnicolaou/rtl-detect/issues"
  },
  "author": {
    "name": "Andreas Nicolaou",
    "email": "anicolaou66@gmail.com"
  },
  "license": "MIT",
  "jest": {
    "transform": {
      "^.+\\.(ts)$": [
        "ts-jest"
      ]
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "bundlewatch": {
    "files": [
      {
        "path": "dist/index.js",
        "maxSize": "4kB",
        "compression": "gzip"
      },
      {
        "path": "dist/index.cjs",
        "maxSize": "4kB",
        "compression": "gzip"
      },
      {
        "path": "dist/index.umd.js",
        "maxSize": "4kB",
        "compression": "gzip"
      },
      {
        "path": "dist/index.umd.min.js",
        "maxSize": "2KB",
        "compression": "gzip"
      }
    ]
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.6.1",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "cross-env": "^10.1.0",
    "bundlewatch": "^0.4.1",
    "prettier": "3.6.2",
    "rollup": "^4.52.3",
    "rollup-plugin-dts": "^6.2.3",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "rtl",
    "right-to-left",
    "language",
    "detection",
    "text direction",
    "locale",
    "unicode",
    "typescript",
    "javascript",
    "bidi",
    "internationalization",
    "i18n",
    "arabic",
    "hebrew",
    "persian",
    "urdu",
    "l10n"
  ]
}
